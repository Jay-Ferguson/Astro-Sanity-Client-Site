---
import { getAllProjects } from "../lib/api";
import { getAllGalleryImages } from "../lib/api";
import { urlForImage } from "../lib/urlForImage";
import Image from "astro/components/Image.astro";

const projects = await getAllProjects();

const galleryImages = await getAllGalleryImages();
---

<script>
  import "../dist/css/photoswipe.css";
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  const lightbox = new PhotoSwipeLightbox({
    gallery: "#gallery--zoom-transition",
    children: "a",
    showHideAnimationType: "zoom",
    pswpModule: () => import("photoswipe"),
  });

  lightbox.init();
</script>

<ul class="gallery_container">
  {
    projects.map((project) => (
      <section id="gallery--zoom-transition">
        <li class="pswp-gallery project-item-container" id="lightgallery">
          <a
            href={urlForImage(project.mainImage).url()}
            data-pspw-width="1669"
            data-pspw-height="2500"
          >
            <Image
              src={urlForImage(project.mainImage).url()}
              class="project-image"
              alt={project.title}
              height={300}
              width={400}
              loading="lazy"
            />
          </a>


          <div class="thumbnail-container">
            {project.galleryImages.map((galleryImage) => (
              <div class="test-div">
            <Image
              src={urlForImage(galleryImage.asset).url()}
              alt="project-thumnail"
              class="thumbnail-img"
              data-pspw-width="1669"
              data-pspw-height="2500"
              height={100}
              width={200}
            />
            
            <a href="thumbnail-click" class="gal-thumbnail">
              <h1 class="test"></h1>
              </a>

              </div>
            ))
          }
            </div>

          <a href={`/posts/${project.slug.current}`} class="project-text">
            <h3 class="project-title project-text">{project.title}</h3>
            <p class="project-description">
              {project.body[0].children[0].text}
            </p>
          </a>
        </li>
      </section>

<p>this is a git test</p>
    ))
  }
</ul>

<style>
  .gallery_container {
    padding: 2rem;
    display: grid;
    gap: 2rem;
    grid-template-rows: repeat(3, 1fr);
    margin: auto 0;
  }

  .test {
    font-size: 5rem;
    color: #ececec;
  }

  .intro_text {
    color: #ececec;
    font-size: 1.3rem;
    font-weight: 600;
    padding-top: 5rem;
    margin: 0 auto;
    margin-bottom: 2rem;
    max-width: 80%;
    text-align: center;
    text-wrap: balance;
  }

  .project_item_container {
    justify-items: center;
    max-width: 1000px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr;
    gap: 0.2rem;
    margin-right: 4rem;
    margin-left: 2rem;

    @media screen and (max-width: 700px) {
      grid-template-columns: 1fr;
      grid-template-rows: 1fr 1fr;
      justify-items: center;
    }
  }

  .project_image {
    margin-top: 2rem;

    @media screen and (max-width: 700px) {
    }
  }

  .thumbnail-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    gap: 0.5rem;
    padding-top: 1rem;
    padding-bottom: 0.5rem;
  }

  .test-text {
    color: #ececec;
    text-decoration: none;
    list-style: none;
    font-size: 1.4rem;
  }

  .thumbnail-img {
    height: 50px;
    width: 80px;
    object-fit: contain;
    border-radius: 5px;
  }

  .projects_text {
    color: #ececec;
    text-decoration: none;
  }

  .project-title {
    color: #ececec;
    text-decoration: none;
    margin-bottom: 2rem;
    margin-top: 2rem;
    margin-left: 2rem;
    font-size: 2.5rem;

    @media screen and (max-width: 700px) {
      grid-column: 1;
      grid-rows: 1 / 2;
    }
  }

  .project-description {
    color: #ececec;
    margin-top: 2rem;
    @media screen and (max-width: 700px) {
    }
  }

  /* gallery-controls */

  @font-face {
    font-family: "lg";
    src:
      url("../fonts/lg.woff2?io9a6k") format("woff2"),
      url("../fonts/lg.ttf?io9a6k") format("truetype"),
      url("../fonts/lg.woff?io9a6k") format("woff"),
      url("../fonts/lg.svg?io9a6k#lg") format("svg");
    font-weight: normal;
    font-style: normal;
    font-display: block;
  }
</style>
