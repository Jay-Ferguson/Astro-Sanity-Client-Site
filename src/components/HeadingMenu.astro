---
import Image from "astro/components/Image.astro";
import headerLogo from "../local-images/header-logo.svg";
---

<header>
  <nav role="navigation" aria-label="Main menu">
    <span id="nav-label" hidden>Navigation</span>
    <button
    id="btnOpen"
      aria-expanded="false"
      class="hamburger-menu"
      aria-labelled="nav-label"
    >
      <svg
        width="40"
        height="24"
        viewBox="0 0 40 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <rect id="Rectangle_1" width="40" height="4" fill="#FFFFFF"></rect>
        <rect id="Rectangle_2" y="10" width="40" height="4" fill="#FFFFFF"
        ></rect>
        <rect id="Rectangle_3" y="20" width="40" height="4" fill="#FFFFFF"
        ></rect>
      </svg>
      <p class="menu-label">Menu</p>
    </button>

    <ul class="heading-menu">
      <div class="menu-container" role="dialog" ariab-labelledby="nav-label">
        <button aria-expanded="true" class="hamburger-menu close">
          <svg
            width="28"
            height="27"
            viewBox="0 0 28 27"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <line
              x1="3.10049"
              y1="2.27207"
              x2="25.7279"
              y2="24.8995"
              stroke="white"
              stroke-width="4"></line>
            <line
              x1="2.27207"
              y1="24.8995"
              x2="24.8995"
              y2="2.27209"
              stroke="white"
              stroke-width="4"></line>
          </svg>
          <p class="menu-label">Close</p>
        </button>
      </div>
      <Image src={headerLogo} alt="header-logo" class="header-logo" />
      <li><a class="header-menu-item" href="/">Home</a></li>
      <li><a class="header-menu-item" href="/gallery/">Gallery</a></li>
      <li><a class="header-menu-item" href="/contact/">Contact</a></li>
      <li><a class="header-menu-item" href="/about/">Aboout</a></li>
    </ul>
  </nav>
</header>

<style>
  .hamburger-menu{
    display: none;
  }

  .line {
    display: none;
  }

  header {
    padding: 0;
  }

  li {
    list-style: none;
  }

  .heading-menu {
    display: flex;
    text-decoration: none;
    flex-direction: row;
    align-items: center;
    justify-content: space-evenly;
    gap: 2rem;
    height: 5rem;
    margin-top: -0.5rem;
    padding-top: 2rem;
    width: 100%;
    background-color: #ffffff;
    position: absolute;
    z-index: 10;
  }

  .header-logo {
    justify-self: flex-start;
    margin-right: 3rem;
  }

  .header-menu-item {
    text-decoration: none;
    list-style: none !important;
  }

  @media screen and (max-width: 700px) {
    .header-logo {
      display: none;
    }
    .heading-menu {
      flex-direction: column;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      transition: 0.4s ease-in;
      translate:100vw;
      transition: translate 0.5s ease-in-out;
    }
    #btnOpen[aria-expanded="true"] {
      + .heading-menu {
        translate:0;
      }
    }
    .heading-menu[ { 
        translate:0;
      
    }
    .hamburger-menu {
      position: absolute;
      border-radius: 50%;
      border: none;
      padding: 0;
      background: #c6c6c6;
      z-index: 50;
      height: 5rem;
      width: 5rem;
      top: 15px;
      right: 25px;
      display: flex;
      flex-flow: column;
      justify-content: center;
      align-items: center;
    }

    .menu-label {
      position: absolute;
      bottom: -10px;
    }

    /* hamburger menu */
    svg {
    }
    .ham {
      display: flex;
      flex-flow: column;
      align-items: space-between;
      justify-content: center;
      height: 4rem;
      width: 4rem;
      cursor: pointer;
      -webkit-tap-highlight-color: transparent;
      transition: transform 400ms;
      -moz-user-select: none;
      -webkit-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }
    .hamRotate.active {
      transform: rotate(45deg);
    }
    .hamRotate180.active {
      transform: rotate(180deg);
    }
    .line {
      fill: currentColor;
      transition:
        stroke-dasharray 400ms,
        stroke-dashoffset 400ms;
      stroke: #ed1717 !important;
      stroke-width: 6.5;
      stroke-linecap: round;
    }

    .ham8 .top {
      stroke-dasharray: 40 160;
    }
    .ham8 .middle {
      stroke-dasharray: 40 142;
      transform-origin: 50%;
      transition: transform 400ms;
    }
    .ham8 .bottom {
      stroke-dasharray: 40 85;
      transform-origin: 50%;
      transition:
        transform 400ms,
        stroke-dashoffset 400ms;
    }
    .ham8.active .top {
      stroke-dashoffset: -64px;
    }
    .ham8.active .middle {
      transform: rotate(90deg);
    }
    .ham8.active .bottom {
      stroke-dashoffset: -64px;
    }
  }

  .heading-menu__open {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    transition: 0.4s ease-in;
  }

  .header-menu-item {
    font-size: 2rem;
  }
</style>

<script>
  const btnOpen = document.querySelector("#btnOpen");
  
  function openMobileMenu() {
    btnOpen.setAttribute('aria-expanded', 'true');
  }
  btnOpen.addEventListener('click', openMobileMenu);



</script>
