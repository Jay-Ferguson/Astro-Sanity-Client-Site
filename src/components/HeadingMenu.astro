---
import Image from "astro/components/Image.astro";
import headerLogo from "../local-images/header-logo.svg";
---

<header>
  <ul class="heading-menu">
    <Image src={headerLogo} alt="header-logo" />

    <li><a class="header-menu-item" href="/">Home</a></li>
    <li><a class="header-menu-item" href="/gallery/">Gallery</a></li>
    <li><a class="header-menu-item" href="/contact/">Contact</a></li>
    <li><a class="header-menu-item" href="/about/">Aboout</a></li>
  </ul>
</header>

<style>
  header {
    padding: 0;
  }

  .heading-menu {
    display: flex;
    text-decoration: none;
    flex-flow: row;
    align-items: center;
    gap: 2rem;
    height: 5rem;
    justify-content: center;
    margin-top: 0.5rem;
    width: 100%;
    background-color: #f2f2f2;
  }

  .header-menu-item {
    text-decoration: none;
  }
</style>
