---
import api from '../lib/api'
import {getAllPosts} from '../lib/api'
const posts = await getAllPosts();
---

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding-bottom: 2rem;
    padding-top: 2rem;
    display: grid;
    grid-template-columns: repeat(2, 2fr);
    grid-gap: 1rem;
  }

  .grid-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    grid-template-rows: 80%;
    border-radius: 10px;
    padding: 1rem;
    background-color: #1f1f1f;
    background-color:#1f1f1f;
  }

  .card{
    padding:1rem;
    display:grid;
    grid-template-rows: repeat(2, 60%, 30%);
    align-self:center;
  }

  .img-thumbnail-container{
    display:flex;
    flex-flow:row;
    gap:.5rem;
    justify-content:space-between;
    align-items:center;
    margin:5px;
  }

  .img-thumbnail{
    width:30px;
    height:auto;
    object-fit:contain;
  }
</style>

<div class="container">
   <ul class='grid-card'>
               {posts.map(post => (
                         <li class="card">
                              <a href={`/posts/${post.slug.content}`}>{post.title}
                                </a>
                              </li> 
               ))}
          
     </ul>

</div>

</div>

